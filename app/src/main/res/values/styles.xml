<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorPrimaryInverse">@color/primaryTextInverse</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
        <item name="android:actionMenuTextColor">?android:textColorPrimary</item>
    </style>
</resources>
